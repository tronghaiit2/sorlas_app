<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:fitsSystemWindows="true">

    <ImageView
            android:id="@+id/imageView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/background"
            android:scaleType="fitXY" android:cropToPadding="false" android:adjustViewBounds="false"/>

    <LinearLayout
            android:id="@+id/layoutBottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:orientation="vertical">

        <Button
                android:id="@+id/button_sub_list"
                android:layout_width="200dp"
                android:layout_height="36dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="0dp"
                android:text="Đã đăng ký"
                android:elevation="3dp"
                android:background="@drawable/buttons"
                android:textColor="#ffffff"
                android:textColorHint="#877B7B"
                android:textSize="8pt"
                android:textStyle="bold"
                android:onClick="subscribedListClick"/>

        <Button
                android:id="@+id/button_sub_more"
                android:layout_width="200dp"
                android:layout_height="36dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="40dp"
                android:text="Đăng ký thêm"
                android:elevation="3dp"
                android:background="@drawable/buttons"
                android:textColor="#ffffff"
                android:textColorHint="#877B7B"
                android:textSize="8pt"
                android:textStyle="bold"
                android:onClick="subscribeMoreClick"/>

        <Button
                android:id="@+id/historic_warning"
                android:layout_width="200dp"
                android:layout_height="36dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="80dp"
                android:text="Thông báo"
                android:elevation="3dp"
                android:background="@drawable/buttons"
                android:textColor="#ffffff"
                android:textColorHint="#877B7B"
                android:textSize="8pt"
                android:textStyle="bold"
                android:onClick="notificationClick"/>

    </LinearLayout>
    <TextView
            android:text="WELCOME"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView" android:layout_weight="1"
            android:fontFamily="sans-serif" android:textColor="#FFFFFF" android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@+id/imageView" android:layout_marginTop="165dp"
            app:layout_constraintStart_toStartOf="@+id/imageView" android:layout_marginStart="45dp"/>
    <TextView
            android:text="to Sorlas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView2"
            android:textColor="#FFFFFF" android:fontFamily="sans-serif"
            android:textStyle="bold" app:layout_constraintTop_toBottomOf="@+id/textView"
            app:layout_constraintStart_toStartOf="@+id/imageView" android:layout_marginStart="45dp"/>
    <TextView
            android:text="Save polar, use solar "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView3"
            android:fontFamily="sans-serif-light" android:textColor="#FFFFFF"
            app:layout_constraintStart_toStartOf="@+id/imageView" android:layout_marginStart="45dp"
            app:layout_constraintTop_toTopOf="@+id/imageView" android:layout_marginTop="257dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>

